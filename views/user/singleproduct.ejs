	<section class="ftco-section">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 mb-5 ftco-animate">
					<div
						style="background-image:url('<%= product.image %>') ; width: 500px; height: 400px; background-size: contain; background-repeat: no-repeat;">
					</div>
				</div>
				<div class="col-lg-6 product-details pl-md-5 ftco-animate">
					<h3>
						<%= product.productname %>
					</h3>
					<p class="price"><span>INR <%= product.sellingprice %></span></p>
					<p>
						<%= product.description %>
					</p>
					<div class="row mt-4">
						<div class="col-md-6">
							<div class="form-group d-flex">
								<div class="select-wrap">
								</div>
							</div>
						</div>
						<div class="w-100"></div>
						<div class="input-group col-md-6 d-flex mb-3">
							<div class="w-100"></div>
						</div>
						<p><a id="addtocart" class="btn btn-black py-3 px-5"><span class="icon-shopping_cart"> Add to
									Cart </a>
							<input type="hidden" value="<%= product._id %>" id="hiddencart">
							<a id="addtowishlist" class="btn btn-black py-3 px-5">Add to Wishlist</a>
						</p>
						<input type="hidden" value="<%= product._id %>" id="hiddenwishlist">
					</div>
				</div>
			</div>
	</section>


	<section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
		<div class="container py-4">
			<div class="row d-flex justify-content-center py-5">
